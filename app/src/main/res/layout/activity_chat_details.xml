<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chat_details_activity_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#EEEEEE"
        android:orientation="horizontal"
        android:padding="4dp">

        <EditText
            android:id="@+id/chat_details_activity_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="5"
            android:paddingLeft="4dp"
            android:textSize="14sp"
             />

        <Button
            android:id="@+id/chat_details_activity_send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="6dp"
            android:text="发送"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/chat_details_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图片"/>

        <Button
            android:id="@+id/chat_details_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频"/>

        <Button
            android:id="@+id/chat_details_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="音频"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chat_details_activity_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>



</LinearLayout>